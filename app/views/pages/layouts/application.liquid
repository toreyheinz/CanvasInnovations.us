---
title: Application
slug: application
position: 99
listed: false
published: false
is_layout: true
---
{% capture 'banner_file' %}{% editable_file 'banner', block: 'main' %}{% endeditable_file %}{% endcapture %}
<!doctype html>
<html class="no-js" lang="en">
  <head>
    {% include 'metatags' %}
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">
    {{ 'app.css' | stylesheet_tag }}
    {% block head %}
    {% endblock %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
  </head>
  <body class="{{ page.slug }}">
    <div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
      <a href="/" class="logo">
        Canvas Innovations
      </a>
      <button class="menu-icon float-right" type="button" data-toggle="example-menu"></button>
    </div>
    <!-- Start Top Bar -->
    <div class="top-bar"  id="example-menu">
      <div class="row column">
        <div class="top-bar-left  text-center medium-text-left">
          <div class="logo">
            <a href="/">
              <img src="{{ 'CanvasInnovations-logo.png' | theme_image_url | resize: '125x40#', optimize: 80 }}" width="125" height="87" alt="Canvas Innovations Logo">
            </a>
          </div>
        </div>

        <div class="top-bar-right  text-center medium-text-left">
          {% include 'dropdown-menu' %}
        </div>
      </div>
    </div>
    <!-- End Top Bar -->
    <div id="main" class="row column">
      {% block main %}
        <h1>{% editable_text "heading", line_break: false, format: 'raw', rows: 1 %}{% endeditable_text %}</h1>
        {% editable_text content %}Lorem ipsum{% endeditable_text %}
      {% endblock %}
    </div>

    <footer>
      <div class="top row expanded text-center">
        <div class="row">
          <div class="column medium-4 large-3">
            <p class="lead">
              Contact us
            </p>
            <p>
              {% include 'phone_number' %}<br>

              {% include 'email_address' %}<br>
                          </p>
            <p>
              {% include 'formatted_address' %}<br>

            </p>
            <p>
              {% include 'hours' %}
            </p>
          </div>
          <div class="column medium-4 large-3 hide-for-small-only">
            <p class="lead">
              Services
            </p>
            <p>
              {% for service in contents.services limit:9 %}
                <a href="{% path_to service %}">{{ service.title }}</a><br>
              {% endfor %}
            </p>
          </div>
          <div class="column medium-4 large-3 hide-for-medium-only hide-for-small-only">
            <p class="lead">
              Projects
            </p>
            <p>
              {% for project in contents.projects limit:9 %}
                <a href="{% path_to project %}">{{ project.title }}</a><br>
              {% endfor %}
            </p>

          </div>
          <div class="column medium-4 large-3">
            <p class="lead">
              <a href="/testimonials"><u>Testimonials</u></a>
            </p>
            {% include 'random_testimonial' %}
          </div>
        </div>
        <p class="lead">
          Canvas Innovations - {% include 'phone_number' %}
        </p>
        <p class="cta">
          {% include 'estimate_button' %}
        </p>
      </div>
      <div class="bottom row expanded text-center">
        <p>
          <small>
            You've reached the bottom of the page, please feel free to call if you have any questions: {% include 'phone_number' %}
          </small>
        </p>
      </div>
    </footer>
    <script  src="https://code.jquery.com/jquery-2.2.3.min.js"   integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo="   crossorigin="anonymous"></script>
    {{ 'app.js'                   | javascript_tag }}
    {% block body_bottom %}
    {% endblock %}
  </body>
</html>
